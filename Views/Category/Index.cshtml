@model IEnumerable<DKMart.Models.Category>
<div class="pt-3">
    <div class="container row">
        <div class="col-6" style="padding-left:5em"><h2 class="text-secondary">Categories</h2> </div>
        <div class="col-6 text-right"><a class="btn btn-outline-info" asp-controller="Category" asp-action="Create"><i class="fa-solid fa-square-plus"></i> Category</a></div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {<div class="container">
    <table class="table table-bordered table-striped w-100">

        <thead class="thead-dark">
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th class="text-center"><i class="fa-solid fa-pen-to-square"></i><span> Edit</span></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td class="w-50">@obj.CatName</td>
                    <td class="w-25">@obj.DisplayOrder</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-outline-success mx-2" asp-controller="Category" asp-route-CatId="@obj.CatId" asp-action="Edit"><i class="fa-solid fa-user-pen"></i></a>
                            <a class="btn btn-outline-danger mx-2" asp-controller="Category" asp-route-CatId="@obj.CatId" asp-action="Delete"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
        }
    </div>

