@model DKMart.Models.Products
<form method="post" asp-action="DeleteProd">
    <input asp-for="ProductId" hidden />
    <div class="border p-4 mt-5">
        <div class="form-group pb-3 pl-3 row"><h2 class="text-secondary">Add Category Details</h2></div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="title" disabled class="form-control" />
                        <span asp-validation-for="title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="image"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="image" disabled class="form-control" />
                        <span asp-validation-for="image" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="Delete" class="btn btn-outline-success w-100" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-danger w-100">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*keep this empty*@
            </div>
        </div>
    </div>
</form>


